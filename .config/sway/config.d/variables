# Modifier keys
set $mod Mod4
set $alt Mod1

# Font settings
font pango: JetBrainsMono Nerd Font 12

# Application definitions
set $terminal alacritty
set $files thunar

# Direction keys (Vim-like)
set $left h
set $down j
set $up k
set $right l

# Application launcher
set $menu wofi --show drun --conf $HOME/.config/wofi/config --style $HOME/.config/wofi/style.css
